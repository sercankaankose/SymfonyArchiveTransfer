    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var typeField = document.getElementById('articleType');
            var translatorTab = document.getElementById('pills-translator-tab');
            var metadataTab = document.getElementById('pills-metadata-tab');
            var metadataPane = document.getElementById('pills-metadata');
            var translatorPane = document.getElementById('pills-translator');
            var authorTab = document.getElementById('pills-author-tab');
            var citationsTab = document.getElementById('pills-citations-tab');
            toggleTabs();

            typeField.addEventListener('change', function () {
                toggleTabs();
            });

            function toggleTabs() {
                if (typeField.value === '001') {
                    translatorTab.disabled = false;
                    // if(translatorTab.style.backgroundColor = '#a52834'){
                    //     translatorTab.style.color = '#fff';
                    // }else{
                    translatorTab.style.backgroundColor = '';
                    translatorTab.style.color = '';
                    // }
                    if (translatorTab.getAttribute('aria-selected') === 'true') {
                        // Disable translator tab
                        translatorTab.disabled = true;
                        translatorTab.setAttribute('aria-selected', 'false');
                        translatorTab.classList.remove('active');

                        // Enable metadata tab
                        metadataTab.disabled = false;
                        metadataTab.setAttribute('aria-selected', 'true');
                        metadataTab.classList.add('active');

                        // Add 'show active' class to the metadata pane
                        metadataPane.classList.add('show', 'active');

                        // Remove 'show active' class from the translator pane
                        translatorPane.classList.remove('show', 'active');
                    }
                } else {
                    translatorTab.disabled = true;
                    translatorTab.style.backgroundColor = 'rgb(237,237,238)';
                    translatorTab.style.color = 'rgb(154,32,32)';

                    // Disable translator tab
                    translatorTab.disabled = true;
                    translatorTab.setAttribute('aria-selected', 'false');
                    translatorTab.classList.remove('active');

                    if (!authorTab.getAttribute('aria-selected') === 'true' && !citationsTab.getAttribute('aria-selected') === 'true') {
                        metadataTab.setAttribute('aria-selected', 'true');
                        metadataTab.classList.add('active');
                        metadataPane.classList.add('show', 'active');
                    }

                    translatorPane.classList.remove('show', 'active');
                }
            }
        });
    </script>
