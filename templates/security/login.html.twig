{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            {% if error %}
                <div class="alert alert-danger"
                     style="font-size: 20px; text-align: center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="col-md-6">
                <div class="card" style="background-color: #f2f2f2; max-height: 700px; height:400px; width: 100%; ">

                    <div class="card-body">
                        <form method="post">

                            <h1 class="h3 mb-3 font-weight-normal">Giriş</h1>
                            <label for="inputEmail">E-posta</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                   class="form-control" autocomplete="email" required>
                            <br>
                            <label for="inputPassword">Şifre</label>
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                   autocomplete="current-password" required>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <br>

                            <div class="d-flex justify-content-center">
                                <button class="btn btn-lg btn-primary bi-box-arrow-in-right" style="width: 100%"
                                        type="submit">
                                    Giriş
                                </button>
                            </div>
                        </form>
                        <br>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
