{% extends 'base.html.twig' %}

{% block title %}Kullanıcı Paneli{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card-custom {
            transition: transform 0.3s, box-shadow 0.3s;
            border: 1px solid #ddd;
            box-shadow: 0 20px 20px rgba(0, 0, 0, 0.1);

        }
        .card-custom:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);

        }
        .card-header-custom {
            background-color: #f8f9fa;
            border-bottom: 1px solid #ddd;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 mx-auto mb-4">
                <a href="{{ path('editor_journal_management') }}" class="text-decoration-none">
                    <div class="card card-custom">
                        <div class="card-header card-header-custom">
                            <h2 class="h4 text-dark">Editörlük İşlemleri</h2>
                        </div>
                        <div class="card-body">
                            <h5 class="card-text text-dark">Dergiler</h5>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-6 mx-auto mb-4">
                <a href="{{ path('operator_journal_management') }}" class="text-decoration-none">
                    <div class="card card-custom">
                        <div class="card-header card-header-custom">
                            <h2 class="h4 text-dark">Operatörlük İşlemleri</h2>
                        </div>
                        <div class="card-body">
                            <h5 class="card-text text-dark">Dergiler</h5>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
