{% extends 'base.html.twig' %}

 {% block title %}Dergi Sayıları{% endblock %}
 {% block stylesheets %}
     <link href="//cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" rel="stylesheet">
     <link type="text/css" href="{{ asset('css/breadcrumb.css') }}" rel="stylesheet">

 {% endblock %}

    {% block body %}
        <style>
            .card {
                max-height: none;
                overflow: auto;
            }

            header {
                background-color: #f3f3f3;
            }

            #deleteIssueModal {
                margin-top: 150px;
            }

        </style>
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1>{{ journal.name }} Sayıları</h1>
                <div class="m-3 me-0">
                    <a href="{{ path('article_add',{'id': issues.id}) }}" class="btn btn-lg btn-dark">Yeni Makale
                    </a>

                    <a href="{{ path('issue_save',{'id': issues.id}) }}" class="btn btn-lg btn-success">Düzenlendi
                        İşaretle</a>
                </div>

            </div>
            <div class="card shadow-lg " style="font-size: 20px;">
                <div class="card-body">

                    <div class="container_table " style="overflow: hidden;">
                        <table class="table" id="myTable">
                            <thead>
                            <tr>
                                <th>Makale Başlığı</th>
                                <th>Dil</th>
                                <th>Sayfalar</th>
                                <th>Durum</th>
                                <th style="text-align: right; "></th>
                                <th style="text-align: right; "></th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for article in articles %}
                                <tr>

                                    {% if article.translations.first.title %}
                                        <td>{{ article.translations.first.title|slice(0, 85) }}</td>
                                    {% else %}
                                        <td>---</td>
                                    {% endif %}
                                    {% if article.primaryLanguage =='001' %}
                                        <td>Türkçe</td>
                                    {% elseif article.primaryLanguage == '002' %}
                                        <td>İngilizce</td>
                                    {% elseif article.primaryLanguage == '003' %}
                                        <td>Almanca</td>
                                    {% elseif article.primaryLanguage == '004' %}
                                        <td>İspanyolca</td>
                                    {% elseif article.primaryLanguage == '005' %}
                                        <td>Arapça</td>
                                    {% elseif article.primaryLanguage == '006' %}
                                        <td>Rusça</td>
                                    {% elseif article.primaryLanguage == '007' %}
                                        <td>Farsça</td>
                                    {% else %}
                                        <td>Türkçe</td>

                                    {% endif %}
                                    <td>{{ article.firstPage }} - {{ article.lastPage }}</td>
                                    {% if article.status == 'waiting' %}
                                        <td>Beklemede</td>
                                    {% elseif article.status == '001' %}
                                        <td>Düzenlenmeli</td>
                                    {% elseif article.status == '002' %}
                                        <td> Düzenlendi</td>
                                    {% elseif article.status == '003' %}
                                        <td>Hatalı</td>
                                    {% else %}
                                        <td>--</td>
                                    {% endif %}
                                    <td style="text-align: right">
                                        {% if article.status == '001' %}
                                            <a class="btn btn-warning"
                                               href="{{ path('article_edit', {'id': article.id}) }}">Düzenle
                                            </a>
                                        {% elseif article.status == '002' %}
                                            <a class="btn btn-success"
                                               href="{{ path('article_edit', {'id': article.id}) }}">Düzenle
                                            </a>
                                        {% elseif article.status == '003' %}
                                            <a class="btn btn-danger"
                                               href="{{ path('article_edit', {'id': article.id}) }}">Düzenle
                                            </a>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-secondary dropdown-toggle" type="button"
                                                    id="dropdownMenuButton" data-bs-toggle="dropdown"
                                                    aria-haspopup="true" aria-expanded="false">
                                                <i class="bi bi-three-dots"></i>
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item"
                                                   href="{{ path('article_Pdf_Change', {'id': article.id}) }}">Pdf
                                                    Güncelle</a>
                                                <a class="dropdown-item" type="button" href="#" data-bs-toggle="modal"
                                                   onclick="openDeleteModal({{ article.id }})"
                                                   data-bs-target="#deleteArticleModal"
                                                   data-target="#deleteArticleModal" data-id="{{ article.id }}">Sil</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">Makale Bulunamadı...</td>
                                    <td colspan="3"></td>
                                    <td colspan="3"></td>
                                    <td colspan="3"></td>
                                    <td colspan="3"></td>
                                    <td colspan="3"></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="deleteArticleModal" tabindex="-1" role="dialog"
             aria-labelledby="deleteArticleModalLabel" aria-hidden="true">

            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteArticleModalLabel">Makale Silinecek</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        </button>
                    </div>
                    <div class="modal-body">
                        Makaleyi silmek istediğinizden emin misiniz?
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="deleteArticleLink" class="btn btn-danger" data-bs-dismiss="modal">
                            Sil
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
    {% block javascripts %}

        <script charset="utf8" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
        <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
        <script>
            function openDeleteModal(articleId) {
                var deleteUrl = "{{ path('article_delete', {'id': 'article_ID'}) }}".replace('article_ID', articleId);
                document.getElementById('deleteArticleModalLabel').textContent = 'Makaleyi Sil';
                document.querySelector(`#deleteArticleLink`).setAttribute('href', deleteUrl);
                var deleteModal = new bootstrap.Modal(document.getElementById('deleteArticleModal'));
                deleteModal.show();

                document.getElementById('deleteArticleLink').addEventListener('click', function () {
                    window.location.href = deleteUrl;
                });
            }
        </script>
        <script>
            function closeModal() {
                $('#deleteArticleModal').modal('hide');
                $('.modal-backdrop').remove();
            }


            $('.btn-close').click(function () {
                closeModal();
            });


            $('#deleteArticleLink').click(function () {
                closeModal();
            });
        </script>
        <script>
            jQuery.extend(jQuery.fn.dataTableExt.oSort, {
                "yesy-asc": function (str1, str2) {
                    if (str1 === "")
                        return 1;
                    if (str2 === "")
                        return -1;
                    return ((str1 < str2) ? -1 : ((str1 > str2) ? 1 : 0));
                },

                "yesy-desc": function (str1, str2) {
                    if (str1 === "")
                        return 1;
                    if (str2 === "")
                        return -1;
                    return ((str1 < str2) ? 1 : ((str1 > str2) ? -1 : 0));
                }
            });
            jQuery.extend(jQuery.fn.dataTableExt.oSort, {
                "sayi-asc": function (str1, str2) {
                    if (str1 === "")
                        return 1;
                    if (str2 === "")
                        return -1;
                    return parseInt(str1) - parseInt(str2);
                },

                "sayi-desc": function (str1, str2) {
                    if (str1 === "")
                        return 1;
                    if (str2 === "")
                        return -1;
                    return parseInt(str2) - parseInt(str1);
                }
            });

            let table = new DataTable('#myTable', {
                pageLength: 25,
                responsive: true,
                searchBuilder: true,
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json',
                },
                order: [[2, 'asc']],
                columnDefs: [
                    {type: 'yesy', targets: [0]},
                    {type: 'sayi', targets: [2]},
                    {orderable: false, targets: [4]},
                ],
            });

        </script>
    {% endblock %}
