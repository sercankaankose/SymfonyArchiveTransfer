{% extends 'base.html.twig' %}

 {% block title %}Dergi Sayıları{% endblock %}
 {% block stylesheets %}
     <link href="//cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" rel="stylesheet">
     <link type="text/css" href="{{ asset('css/breadcrumb.css') }}" rel="stylesheet">

 {% endblock %}

    {% block body %}
        <style>
            .card {
                max-height: none;
                overflow: auto;
            }

            header {
                background-color: #f3f3f3;
            }

            #deleteIssueModal {
                margin-top: 150px;
            }

            /* CSS */
            .button-42 {
                background-color: initial;
                background-image: linear-gradient(-180deg, #1c5b3e, #198753);
                border-radius: 3px;
                box-shadow: rgba(0, 0, 0, 0.1) 0 2px 4px;
                color: #FFFFFF;
                cursor: pointer;
                display: inline-block;
                font-family: Inter, -apple-system, system-ui, Roboto, "Helvetica Neue", Arial, sans-serif;
                height: 38px;
                line-height: 40px;
                outline: 0;
                overflow: hidden;
                padding: 0 12px;
                /*margin-top: 0.5px;*/
                pointer-events: auto;
                position: relative;
                text-align: center;
                touch-action: manipulation;
                user-select: none;
                -webkit-user-select: none;
                white-space: nowrap;
                z-index: 9;
                border: 0;
                transition: box-shadow .2s;
            }

            .button-42:hover {
                /*box-shadow: #198754 0 3px 8px;*/
                color: #fff;
            }

            td,
            th {
                text-align: center;
                vertical-align: middle;
            }


            .table td {
                padding: 8px;
            }

            .table {
                border-collapse: collapse;
                border-spacing: 0;
            }

            .badge {
                display: flow;
                line-height: unset;
                font-size: 14px;
                padding: 8px 12px;
            }
        </style>
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1>{{ journal.name }} Sayıları</h1>
                <div class="m-3">
                    {% if role == 'editor' or role == 'admin' and 'ROLE_SYSTEM_OPERATOR' not in user.roles %}
                        {% if role == 'admin' %}
                            <a href="{{ path('journal_issue_add',{'id': journal.id, 'role': 'admin'}) }}"
                               class="btn btn-lg btn-dark"
                               style="margin-right: -13px">Yeni Sayı
                                Ekle</a>
                        {% elseif role == 'editor' %}
                            <a href="{{ path('journal_issue_add',{'id': journal.id, 'role': 'editor'}) }}"
                               class="btn btn-lg btn-dark"
                               style="margin-right: -13px">Yeni Sayı
                                Ekle</a>
                        {% endif %}
                    {% endif %}

                </div>

            </div>
            <div class="card shadow-lg " style="font-size: 20px;">
                <div class="card-body">

                    <div class="container_table" style="overflow: hidden;">
                        <table class="table" id="myTable">
                            <thead>
                            <tr>
                                <th style="text-align: center; ">Sayı Yılı</th>
                                <th style="text-align: center; ">Cilt</th>
                                <th style="text-align: center; ">Sayı</th>
                                <th style="text-align: center; ">Sayı Durumu</th>
                                <th style="text-align: center;">Toplam Makale</th>
                                <th style="text-align: center;">Kontrol Edilmiş Makale</th>
                                <th style="text-align: center;">Hatalı Makale</th>

                                <th style="text-align: right; "></th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for issue in issues %}
                                <tr>
                                    {% set status_all_count = 0 %}
                                    {% set status_editRequired_count = 0 %}
                                    {% set status_edited_count = 0 %}
                                    {% set status_error_count = 0 %}

                                    {% for article in issue.articles %}
                                        {% set status_all_count = status_all_count + 1 %}
                                        {% if article.status == '001' %}
                                            {% set status_editRequired_count = status_editRequired_count + 1 %}
                                        {% elseif article.status == '002' %}
                                            {% set status_edited_count = status_edited_count + 1 %}
                                        {% elseif article.status == '003' %}
                                            {% set status_error_count = status_error_count + 1 %}
                                        {% endif %}
                                    {% else %}
                                    {% endfor %}
                                    <td>{{ issue.year }}</td>
                                    <td>{{ issue.volume }}</td>
                                    <td>{{ issue.number }}</td>
                                    {% if issue.status == '000' %}

                                        <td><span class="badge bg-secondary"
                                                  style=" color: white ;border-radius: 3px; padding: 15px;padding-top: 5px;padding-bottom: 5px; display:inline-flex;">İncelemede</span>
                                        </td>
                                    {% elseif issue.status == '001' %}
                                        <td>
                                            <span class=" "
                                                  style=" font-size: 15px; background-color: #ffc107; color: white ;border-radius: 3px; padding: 7px; display:inline;">Düzenlenmeli</span>
                                        </td>
                                    {% elseif issue.status == '002' %}
                                        <td>
                                            <span class="badge text-bg-success"
                                                  style=" color: white ;border-radius: 3px; padding: 8px; display:inline;">Kontrol Edildi </span>
                                        </td>
                                    {% elseif issue.status == '003' %}
                                        <td>
                                            <span class="badge text-bg-danger"
                                                  style=" color: white ;border-radius: 3px; padding: 13px; padding-top: 5px; padding-bottom: 5px; display:inline;">Hatalı</span>
                                        </td>
                                    {% else %}
                                        <td>--</td>
                                    {% endif %}
                                    <td style="text-align: center">{{ status_all_count }}</td>
                                    <td style="text-align: center">{{ status_edited_count }}</td>
                                    <td style="text-align: center">{{ status_error_count }}</td>

                                    {% set status_status_all_count = 0 %}
                                    {% set status_edited_count = 0 %}
                                    {% set status_error_count = 0 %}

                                    <td style="text-align: right">
                                        <div style="display: inline-flex; justify-content: space-between;">

                                            {% if issue.status == '002' %}
                                                {% if  role != 'operator' and 'ROLE_SYSTEM_OPERATOR' not in user.roles%}
                                                    <a class="btn button-42"
                                                       href="{{ path('issue_export', {'id': issue.id}) }}"
                                                       style="flex: 1; margin-right: 40px">Dışa Aktar <i
                                                                class="bi bi-filetype-xml"></i></a>

                                                {% endif %}


                                            {% else %}
                                            {% endif %}
                                            <div class="btn-group" style="flex: 1; ">
                                                {% if issue.xml %}
                                                    {% if issue.status == '000' %}

                                                    {% else %}
                                                        {% if  role == 'admin' %}
                                                            <a class="btn btn-primary"
                                                               style="text-align: center; border-radius: 3px; width: 100%;"
                                                               href="{{ path('articles_list', {'id': issue.id}) }}">Makaleler</a>
                                                        {% elseif role == 'operator' %}
                                                            <a class="btn btn-primary"
                                                               style="text-align: center; border-radius: 3px; width: 100%;"
                                                               href="{{ path('operator_articles_list', {'id': issue.id}) }}">Makaleler</a>
                                                        {% elseif role ==  'editor' %}
                                                            <a class="btn btn-primary"
                                                               style="text-align: center; border-radius: 3px; width: 100%;"
                                                               href="{{ path('editor_articles_list', {'id': issue.id}) }}">Makaleler</a>
                                                            {#                                                                {% if  role == 'admin'  %} #}
                                                            {#                                                                {% elseif role == 'operator' %} #}
                                                            {#                                                                {% elseif role ==  'editor'%} #}


                                                        {% endif %}

                                                    {% endif %}
                                                {% else %}
                                                    {% if  role == 'admin' %}
                                                        <a class="btn btn-primary"
                                                           style="text-align: center; border-radius: 3px; width: 100%;"
                                                           href="{{ path('articles_list', {'id': issue.id}) }}">Makaleler</a>
                                                    {% elseif role == 'operator' %}
                                                        <a class="btn btn-primary"
                                                           style="text-align: center; border-radius: 3px; width: 100%;"
                                                           href="{{ path('operator_articles_list', {'id': issue.id}) }}">Makaleler</a>
                                                    {% elseif role ==  'editor' %}
                                                        <a class="btn btn-primary"
                                                           style="text-align: center; border-radius: 3px; width: 100%;"
                                                           href="{{ path('editor_articles_list', {'id': issue.id}) }}">Makaleler</a>
                                                    {% endif %}
                                                {% endif %}
                                                {% if role != 'operator' and 'ROLE_SYSTEM_OPERATOR' not in user.roles or role == 'editor' %}
                                                    {#                                                    {% if role == 'editor' or role == 'admin' %} #}
                                                    <div class="dropdown">
                                                        <button class="btn btn-secondary dropdown-toggle"
                                                                type="button"
                                                                id="dropdownMenuButton" data-bs-toggle="dropdown"
                                                                aria-haspopup="true" aria-expanded="false"
                                                                style="border-radius: 3px; margin-left: 1px">
                                                            <i class="bi bi-three-dots"></i>
                                                        </button>
                                                        <div class="dropdown-menu"
                                                             aria-labelledby="dropdownMenuButton">
                                                            {% if role == 'admin' %}
                                                                <a class="dropdown-item"
                                                                   href="{{ path('journal_issue_edit', {'id': issue.id, 'role': 'admin'}) }}">Düzenle</a>
                                                            {% else %}
                                                                <a class="dropdown-item"
                                                                   href="{{ path('journal_issue_edit', {'id': issue.id, 'role': 'editor'}) }}">Düzenle</a>
                                                            {% endif %}
                                                            <a class="dropdown-item" type="button" href="#"
                                                               data-bs-toggle="modal"
                                                               onclick="openDeleteModal({{ issue.id }})"
                                                               data-bs-target="#deleteJournalModal"
                                                               data-target="#deleteJournalModal"
                                                               data-id="{{ issue.id }}">Sil</a>
                                                            {% if issue.status == '000' %}
                                                            {% if role == 'admin' %}
                                                                <a class="dropdown-item"
                                                                   href="{{ path('journal_issue_xml_edit', {'id': issue.id, 'role': 'admin'}) }}">
                                                                    Xml Düzenle
                                                                </a>
                                                            {% else %}
                                                                <a class="dropdown-item"
                                                                   href="{{ path('journal_issue_xml_edit', {'id': issue.id, 'role': 'editor'}) }}">
                                                                    Xml Düzenle
                                                                </a>
                                                            {% endif %}
                                                            {% elseif issue.status == '003' %}
                                                                {% if role == 'admin' %}
                                                                    <a class="dropdown-item"
                                                                       href="{{ path('journal_issue_xml_edit', {'id': issue.id, 'role': 'admin'}) }}">
                                                                        Xml Düzenle
                                                                    </a>
                                                                {% else %}
                                                                    <a class="dropdown-item"
                                                                       href="{{ path('journal_issue_xml_edit', {'id': issue.id, 'role': 'editor'}) }}">
                                                                        Xml Düzenle
                                                                    </a>
                                                                {% endif %}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">Sayı Bulunamadı...</td>
                                    <td colspan="3"></td>
                                    <td colspan="3"></td>
                                    <td colspan="3"></td>
                                    <td colspan="3"></td>
                                    <td colspan="3"></td>
                                    <td colspan="3"></td>
                                    <td colspan="3"></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="deleteIssueModal" tabindex="-1" role="dialog"
             aria-labelledby="deleteIssueModalLabel" aria-hidden="true">

            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteIssueModalLabel"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        </button>
                    </div>
                    <div class="modal-body">
                        Sayıyı silmek istediğinizden emin misiniz?
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="deleteIssueLink" class="btn btn-primary" data-bs-dismiss="modal">
                            Sayıyı Sil
                        </button>
                    </div>
                </div>
            </div>
        </div>

    {% endblock %}
    {% block javascripts %}

        <script charset="utf8" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
        <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
        <script>
            function openDeleteModal(issueId) {
                var deleteUrl = "{{ path('journal_issue_delete', {'id': 'JOURNAL_ID', 'role': role}) }}".replace('JOURNAL_ID', issueId);
                document.getElementById('deleteIssueModalLabel').textContent = 'Sayıyı Sil';
                document.querySelector(`#deleteIssueLink`).setAttribute('href', deleteUrl);
                var deleteModal = new bootstrap.Modal(document.getElementById('deleteIssueModal'));
                deleteModal.show();

                document.getElementById('deleteIssueLink').addEventListener('click', function () {
                    window.location.href = deleteUrl;
                });
            }
        </script>
        <script>
            function closeModal() {
                $('#deleteIssueModal').modal('hide');
                $('.modal-backdrop').remove();
            }


            $('.btn-close').click(function () {
                closeModal();
            });


            $('#deleteIssueLink').click(function () {
                closeModal();
            });
        </script>
        <script>
            jQuery.extend(jQuery.fn.dataTableExt.oSort, {
                "yesy-asc": function (str1, str2) {
                    if (str1 === "")
                        return 1;
                    if (str2 === "")
                        return -1;
                    return ((str1 < str2) ? -1 : ((str1 > str2) ? 1 : 0));
                },

                "yesy-desc": function (str1, str2) {
                    if (str1 === "")
                        return 1;
                    if (str2 === "")
                        return -1;
                    return ((str1 < str2) ? 1 : ((str1 > str2) ? -1 : 0));
                }
            });

            let table = new DataTable('#myTable', {
                pageLength: 25,
                responsive: true,
                searchBuilder: true,
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json',
                    info: " _TOTAL_ kayıttan _START_ - _END_ arasındaki kayıtlar gösteriliyor",
                    sInfoPostFix: ""

                },
                order: [[2, 'asc']],
                columnDefs: [
                    {type: 'yesy', targets: []},
                    {orderable: false, targets: [7]},
                ],
            });
        </script>
    {% endblock %}
