            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const manyCheckbox = document.getElementById('issues_form_many');
                    const dynamicFields = document.querySelectorAll('.dynamic-field');

                    function fadeOut(element) {
                        element.style.transition = "opacity 0.5s";
                        element.style.opacity = "0";
                        setTimeout(function () {
                            element.style.display = "none";
                        }, 500);
                    }

                    function fadeIn(element) {
                        element.style.display = "block";
                        element.style.transition = "opacity 0.5s";
                        element.style.opacity = "1";
                    }

                    function toggleFields() {
                        if (manyCheckbox.checked) {
                            dynamicFields.forEach(field => fadeOut(field));
                        } else {
                            dynamicFields.forEach(field => fadeIn(field));
                        }
                    }

                    toggleFields();

                    manyCheckbox.addEventListener('change', toggleFields);
                });

            </script>



